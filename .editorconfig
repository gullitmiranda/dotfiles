# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
translate_tabs_to_spaces = false

[Makefile]
indent_style = space

[*.sh]
indent_style = tab
